<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="57dp">

        <TextView
            android:id="@+id/displayNumber"
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_marginTop="40dp"
            android:background="@color/purple_200"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="85dp"
            android:layout_height="65dp"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:onClick="bClearClick"
            android:text="Clear"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/displayNumber"
            app:layout_constraintTop_toBottomOf="@+id/displayNumber"
            app:strokeColor="@color/white" />

        <Button
            android:id="@+id/btn_SIN"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="30dp"
            android:background="#B095DF"
            android:backgroundTint="#B095DF"
            android:onClick="bSinClick"
            android:text="SIN"
            app:layout_constraintStart_toEndOf="@+id/btn_clear"
            app:layout_constraintTop_toBottomOf="@+id/displayNumber" />

        <Button
            android:id="@+id/btn_COS"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="30dp"
            android:background="#B095DF"
            android:onClick="bCosClick"
            android:text="COS"
            app:layout_constraintStart_toEndOf="@+id/btn_SIN"
            app:layout_constraintTop_toBottomOf="@+id/displayNumber" />

        <Button
            android:id="@+id/btn_TAN"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="30dp"
            android:background="#B095DF"
            android:onClick="bTanClick"
            android:text="TAN"
            app:layout_constraintEnd_toEndOf="@+id/displayNumber"
            app:layout_constraintStart_toEndOf="@+id/btn_COS"
            app:layout_constraintTop_toBottomOf="@+id/displayNumber" />

        <Button
            android:id="@+id/btn7"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="125dp"
            android:background="@color/purple_200"
            android:backgroundTint="@color/purple_200"
            android:onClick="b7Click"
            android:text="7"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/displayNumber"
            app:layout_constraintTop_toBottomOf="@+id/btn_clear" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="125dp"
            android:background="@color/purple_200"
            android:onClick="b8Click"
            android:text="8"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/btn7"
            app:layout_constraintTop_toBottomOf="@+id/btn_SIN" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="125dp"
            android:background="@color/purple_200"
            android:onClick="b9Click"
            android:text="9"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/btn8"
            app:layout_constraintTop_toBottomOf="@+id/btn_COS" />

        <Button
            android:id="@+id/btn_DIV"
            android:layout_width="85dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@color/purple_200"
            android:onClick="bDivClick"
            android:text="/"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/displayNumber"
            app:layout_constraintStart_toEndOf="@+id/btn9"
            app:layout_constraintTop_toBottomOf="@+id/btn_COS" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="30dp"
            android:background="@color/purple_200"
            android:onClick="b4Click"
            android:text="4"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/btn7"
            app:layout_constraintTop_toBottomOf="@+id/btn7" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@color/purple_200"
            android:onClick="b5Click"
            android:text="5"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/btn4"
            app:layout_constraintTop_toBottomOf="@+id/btn8" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@color/purple_200"
            android:onClick="b6Click"
            android:text="6"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/btn5"
            app:layout_constraintTop_toBottomOf="@+id/btn9" />

        <Button
            android:id="@+id/btn_PROD"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@color/purple_200"
            android:backgroundTint="@color/purple_200"
            android:onClick="bProdClick"
            android:text="x"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/btn_DIV"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/btn6"
            app:layout_constraintTop_toBottomOf="@+id/btn_DIV" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="30dp"
            android:background="@color/purple_200"
            android:onClick="b1Click"
            android:text="1"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/displayNumber"
            app:layout_constraintTop_toBottomOf="@+id/btn4" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@color/purple_200"
            android:onClick="b2Click"
            android:text="2"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/btn1"
            app:layout_constraintTop_toBottomOf="@+id/btn5" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@color/purple_200"
            android:onClick="b3Click"
            android:text="3"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/btn2"
            app:layout_constraintTop_toBottomOf="@+id/btn6" />

        <Button
            android:id="@+id/btn_Add"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:background="@color/purple_200"
            android:onClick="bAddClick"
            android:text="+"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/btn_PROD"
            app:layout_constraintStart_toEndOf="@+id/btn3"
            app:layout_constraintTop_toBottomOf="@+id/btn_PROD" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="30dp"
            android:background="@color/purple_200"
            android:onClick="b0Click"
            android:text="0"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/displayNumber"
            app:layout_constraintTop_toBottomOf="@+id/btn1" />

        <Button
            android:id="@+id/btn_coma"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@color/purple_200"
            android:onClick="bComaClick"
            android:text="."
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/btn0"
            app:layout_constraintTop_toBottomOf="@+id/btn2" />

        <Button
            android:id="@+id/btn_Sub"
            android:layout_width="85dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@color/purple_200"
            android:onClick="bSubClick"
            android:text="-"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="@+id/btn_Add"
            app:layout_constraintStart_toEndOf="@+id/btn3"
            app:layout_constraintTop_toBottomOf="@+id/btn_Add" />

        <Button
            android:id="@+id/btn_Equal"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@color/purple_200"
            android:onClick="bEqualClick"
            android:text="="
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/btn_coma"
            app:layout_constraintTop_toBottomOf="@+id/btn3" />

        <Switch
            android:id="@+id/switchGradRad"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_marginStart="67dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="30dp"
            android:background="@color/purple_200"
            android:onClick="bRadGradClick"
            android:text="Radians / Degrees"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/btn7"
            app:layout_constraintEnd_toStartOf="@+id/btn_DIV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_clear" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>